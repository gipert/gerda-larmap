#!/bin/bash
#
# Author: Luigi Pertoldi - pertoldi@pd.infn.it
# Created: Sun 9 Jun 2019
#
# generation rate depends on the CPU, on MPIK I've seen 30-60 sec / 1E5 ev
# with 2.5E7 events macros this means 1.25-2.50 hours per job

for abs in 5 10 15 20 25 55 75 100; do
    [ ! -d out/sliced-longitudinal-abs$abs-refl1.0 ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-longitudinal.mac.template 20 sliced-longitudinal-abs$abs-refl1.0 $abs 1.0
    [ ! -d out/sliced-transversal1-abs$abs-refl1.0 ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-transversal1.mac.template 20 sliced-transversal1-abs$abs-refl1.0 $abs 1.0
    [ ! -d out/sliced-transversal2-abs$abs-refl1.0 ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-transversal2.mac.template 60 sliced-transversal2-abs$abs-refl1.0 $abs 1.0
    [ ! -d out/sliced-transversal3-abs$abs-refl1.0 ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-transversal3.mac.template 20 sliced-transversal3-abs$abs-refl1.0 $abs 1.0
    [ ! -d out/sliced-transversal4-abs$abs-refl1.0 ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-transversal4.mac.template 20 sliced-transversal4-abs$abs-refl1.0 $abs 1.0
    [ ! -d out/sliced-transversal5-abs$abs-refl1.0 ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-transversal5.mac.template 20 sliced-transversal5-abs$abs-refl1.0 $abs 1.0

    [ ! -d out/sliced-longitudinal-array-abs$abs-refl1.0 ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-longitudinal-array.mac.template 40 sliced-longitudinal-array-abs$abs-refl1.0 $abs 1.0
done

for refl in 0.5 0.75 1.0 1.5 2.0; do
    [ ! -d out/sliced-longitudinal-abs55-refl$refl ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-longitudinal.mac.template 20 sliced-longitudinal-abs55-refl$refl 55 $refl
    [ ! -d out/sliced-transversal1-abs55-refl$refl ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-transversal1.mac.template 20 sliced-transversal1-abs55-refl$refl 55 $refl
    [ ! -d out/sliced-transversal2-abs55-refl$refl ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-transversal2.mac.template 60 sliced-transversal2-abs55-refl$refl 55 $refl
    [ ! -d out/sliced-transversal3-abs55-refl$refl ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-transversal3.mac.template 20 sliced-transversal3-abs55-refl$refl 55 $refl
    [ ! -d out/sliced-transversal4-abs55-refl$refl ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-transversal4.mac.template 20 sliced-transversal4-abs55-refl$refl 55 $refl
    [ ! -d out/sliced-transversal5-abs55-refl$refl ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-transversal5.mac.template 20 sliced-transversal5-abs55-refl$refl 55 $refl

    [ ! -d out/sliced-longitudinal-array-abs55-refl$refl ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-longitudinal-array.mac.template 40 sliced-longitudinal-array-abs55-refl$refl 55 $refl
done
