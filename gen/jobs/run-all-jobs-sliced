#!/bin/bash
#
# Author: Luigi Pertoldi - pertoldi@pd.infn.it
# Created: Sun 9 Jun 2019
#
# generation rate depends on the CPU, on MPIK I've seen 30-60 sec / 1E5 ev
# with 2.5E7 events macros this means 1.25-2.50 hours per job

for abs in 5 10 15 20 25 55 75 100; do
    [ ! -d out/sliced-longitudinal-abs$abs-refl1.0 ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-longitudinal.mac.template 20 sliced-longitudinal-abs$abs-refl1.0 $abs 1.0 0.5
    [ ! -d out/sliced-longitudinal-array-abs$abs-refl1.0 ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-longitudinal-array.mac.template 40 sliced-longitudinal-array-abs$abs-refl1.0 $abs 1.0 0.5

    for i in `seq 1 5`; do
        [ ! -d out/sliced-transversal$i-abs$abs-refl1.0 ] && ./run-jobs-runid-sliced \
            ../sliced/lar-vuv-transversal$i.mac.template 20 sliced-transversal$i-abs$abs-refl1.0 $abs 1.0 0.5
    done
done

for refl in 0.5 0.75 1.0 1.5 2.0; do
    [ ! -d out/sliced-longitudinal-abs55-refl$refl ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-longitudinal.mac.template 20 sliced-longitudinal-abs55-refl$refl 55 $refl 0.5
    [ ! -d out/sliced-longitudinal-array-abs55-refl$refl ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-longitudinal-array.mac.template 40 sliced-longitudinal-array-abs55-refl$refl 55 $refl 0.5

    for i in `seq 1 5`; do
        [ ! -d out/sliced-transversal$i-abs55-refl$refl ] && ./run-jobs-runid-sliced \
            ../sliced/lar-vuv-transversal$i.mac.template 20 sliced-transversal$i-abs55-refl$refl 55 $refl 0.5
    done
done

for refl in 0.5 1.0 2.0; do
    [ ! -d out/sliced-longitudinal-abs15-refl$refl ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-longitudinal.mac.template 20 sliced-longitudinal-abs15-refl$refl 15 $refl 0.5
    [ ! -d out/sliced-longitudinal-array-abs15-refl$refl ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-longitudinal-array.mac.template 40 sliced-longitudinal-array-abs15-refl$refl 15 $refl 0.5

    for i in `seq 1 5`; do
        [ ! -d out/sliced-transversal$i-abs15-refl$refl ] && ./run-jobs-runid-sliced \
            ../sliced/lar-vuv-transversal$i.mac.template 20 sliced-transversal$i-abs15-refl$refl 15 $refl 0.5
    done
done

for cov in 0.3 0.5 0.6 0.7 0.9; do
    [ ! -d out/sliced-longitudinal-abs55-refl1.0-cov$cov ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-longitudinal.mac.template 20 sliced-longitudinal-abs55-refl1.0-cov$cov 55 1.0 $cov
    [ ! -d out/sliced-longitudinal-array-abs55-refl1.0-cov$cov ] && ./run-jobs-runid-sliced \
        ../sliced/lar-vuv-longitudinal-array.mac.template 40 sliced-longitudinal-array-abs55-refl1.0-cov$cov 55 1.0 $cov

    for i in `seq 1 5`; do
        [ ! -d out/sliced-transversal$i-abs55-refl1.0-cov$cov ] && ./run-jobs-runid-sliced \
            ../sliced/lar-vuv-transversal$i.mac.template 20 sliced-transversal$i-abs55-refl1.0-cov$cov 55 1.0 $cov
    done
done
