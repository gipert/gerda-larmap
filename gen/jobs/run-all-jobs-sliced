#!/bin/bash
#
# Author: Luigi Pertoldi - pertoldi@pd.infn.it
# Created: Sun 9 Jun 2019
#
# generation rate depends on the CPU, on MPIK I've seen 30-60 sec / 1E5 ev
# with 2.5E7 events macros this means 1.25-2.50 hours per job

[ ! -d out/sliced-longitudinal ] && ./run-jobs-runid ../sliced/lar-vuv-longitudinal.mac.template 20 sliced-longitudinal
[ ! -d out/sliced-transversal1 ] && ./run-jobs-runid ../sliced/lar-vuv-transversal1.mac.template 20 sliced-transversal1
[ ! -d out/sliced-transversal2 ] && ./run-jobs-runid ../sliced/lar-vuv-transversal2.mac.template 20 sliced-transversal2
[ ! -d out/sliced-transversal3 ] && ./run-jobs-runid ../sliced/lar-vuv-transversal3.mac.template 20 sliced-transversal3
[ ! -d out/sliced-transversal4 ] && ./run-jobs-runid ../sliced/lar-vuv-transversal4.mac.template 20 sliced-transversal4
[ ! -d out/sliced-transversal5 ] && ./run-jobs-runid ../sliced/lar-vuv-transversal5.mac.template 20 sliced-transversal5
