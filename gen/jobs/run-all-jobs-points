#!/bin/bash
#
# Author: Luigi Pertoldi - pertoldi@pd.infn.it
# Created: Mon 14 Oct 2019

def_abs=55
def_refl=1.0
def_cov=0.5
def_tpb=1.0

n_jobs=10

points=(
    "0 30 40"  # outside fibers
    "0 30 0"   # outside fibers
    "0 30 -30" # outside fibers
    "0 20 40"  # between array and fibers
    "0 20 0"   # between array and fibers
    "0 20 -30" # between array and fibers
    "0 0 20"   # above array
    "0 0 70"   # above array
    "0 0 -27"  # below array
    "0 0 -40"  # below array
    "0 0 -70"  # below array
    "0 0 -95"  # below array
    "11 0 -24" # between GD02B and GD02D in string 1
)

for point in "${points[@]}"; do
    str_point=`echo "$point" | sed 's| |_|g'`

    for abs in 5 10 15 20 25 35 45 55 75; do
        if [[ ! -d out/point-$str_point-abs$abs ]]; then
            ./run-jobs-runid-points ../points/lar-vuv-point.mac.template \
                $n_jobs "point-$str_point-abs$abs" $abs $def_refl $def_cov $def_tpb $point
        fi
    done

    for cov in 0.3 0.4 0.45 0.5 0.55 0.6 0.7; do
        if [[ ! -d out/point-$str_point-cov$cov ]]; then
            ./run-jobs-runid-points ../points/lar-vuv-point.mac.template \
                $n_jobs "point-$str_point-cov$cov" $def_abs $def_refl $cov $def_tpb $point
        fi
    done

    for refl in 0.5 0.75 1 1.25 1.5; do
        if [[ ! -d out/point-$str_point-cov$cov ]]; then
            ./run-jobs-runid-points ../points/lar-vuv-point.mac.template \
                $n_jobs "point-$str_point-cov$cov" $def_abs $def_refl $cov $def_tpb $point
        fi
    done
done
