#!/bin/bash
#
# Author: Luigi Pertoldi - pertoldi@pd.infn.it
# Created: Sun 24 Mar 2019
#
# generation rate depends on the CPU, on MPIK I've seen ~2700 ev/s

source ./library.sh

batch_size=100

for i in `seq 0 4`; do
    process_simulation_run lar-vuv-top         $i ${batch_size}
    process_simulation_run lar-vuv-array-upper $i ${batch_size}
done

for i in `seq 0 9`; do
    process_simulation_run lar-vuv-complete    $i ${batch_size}
    process_simulation_run lar-vuv-array-lower $i ${batch_size}
    process_simulation_run lar-vuv-array-upper $i ${batch_size}
done

for i in `seq 0 19`; do
    process_simulation_run lar-vuv-outer       $i ${batch_size}
done

for i in `seq 0 49`; do
    process_simulation_run lar-vuv-array-inner $i ${batch_size}
done
